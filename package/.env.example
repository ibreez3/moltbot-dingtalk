# DingTalk App Configuration (企业内部应用机器人)
DINGTALK_APP_KEY=your_app_key
DINGTALK_APP_SECRET=your_app_secret

# OpenClaw Gateway Configuration
GATEWAY_URL=http://127.0.0.1:18789
GATEWAY_TOKEN=               # Optional: Gateway authentication token
GATEWAY_PASSWORD=            # Optional: Gateway password

# Session Management
SESSION_TIMEOUT=1800000      # Session timeout in milliseconds (default: 30 minutes)

# Message Policies
DM_POLICY=open               # Direct message policy: "open" or "closed"
GROUP_POLICY=open            # Group message policy: "open" or "closed"

# Media Upload
ENABLE_MEDIA_UPLOAD=true     # Enable automatic image upload

# System Prompt (optional)
# SYSTEM_PROMPT="You are a helpful AI assistant."

# Debug
DEBUG=false                  # Enable debug logging
